[user]
	name = zhangxingyu
	email = zhangxingyu@baidu.com
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[help]
    format = html
[alias]
    br = branch
    ca = commit -a
    ci = commit
    co = checkout
    st = status
    oln = log --pretty=oneline --since='2 days ago' --color --graph --abbrev-commit
    olg = log -p -1 --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue) <%an>%Creset' --abbrev-commit
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue) <%an>%Creset' --abbrev-commit
    amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
    zip = !git archive --format zip master --output
    zipHead = !git archive --format=zip HEAD --output
    rmd = !git ls-files -d  -z | xargs -0 git rm
[log]
    date = local
[diff]
    tool = smartsynchronize
[difftool "smartsynchronize"]
    cmd = ~/.sys.config/diffmerge-diff.sh \"$LOCAL\" \"$REMOTE\"
    prompt = false
[difftool "smartsynchronize"]
    cmd = /Applications/SmartSynchronize.app/Contents/MacOS/SmartSynchronize "$LOCAL" "$REMOTE"
[merge]
    tool = gvimdiff
[mergetool "gvimdiff"]
    cmd = gvim -f -d $MERGED $LOCAL $REMOTE
    trustExitCode = false
[core]
	excludesfile = /Users/baidu/.gitignore_global
    whitespace = cr-at-eol
    quotepath = false
    editor = ~/.sys.config/gitEditor.sh
[i18n]
    commitencoding = utf-8
    logoutputencoding = utf-8
[gui]
    encoding = utf-8
[push]
    default = current
[mergetool "diffmerge"]
    cmd = ~/.sys.config/diffmerge-merge.sh \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
    trustExitCode = true
[grep]
    lineNumber = true
[difftool]
    prompt = false
[mergetool "bc4"]
    cmd = bcomp \"$LOCAL\" \"$REMOTE\"
    trustExitCode = false
[mergetool "p4mergetool"]
    cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
    trustExitCode = false
[mergetool]
    keepBackup = false
[mergetool "sourcetree"]
	cmd = /Applications/SmartSynchronize.app/Contents/MacOS/SmartSynchronize \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[difftool "sourcetree"]
	cmd = /Applications/SmartSynchronize.app/Contents/MacOS/SmartSynchronize \"$LOCAL\" \"$REMOTE\"
	path = 
